    CtInsertStringFunc ( "*)(" )
    CtOutputVariableName ( inst^.Source1 )
    CtInsertStringFunc ( ") = " )
    CtOutputVariableName ( inst^.Source2 )
    CtInsertStringFunc ( ";\n" )
END

