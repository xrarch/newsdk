END

FN (CtGenerateF) CtGenerateLoad (
    IN inst : ^IrInstruction,
)

    CtInsertStringFunc ( "    " )
    CtOutputVariableName ( inst^.Defines )
    CtInsertStringFunc ( " = *(" )
    CtInsertStringFunc ( CtTypeNames[inst^.Body.LoadStore.Type] )
    CtInsertStringFunc ( "*)(" )
    CtOutputVariableName ( inst^.Source1 )
    CtInsertStringFunc ( ");\n" )
END

