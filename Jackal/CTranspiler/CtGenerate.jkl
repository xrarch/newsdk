FN (CtGenerateF) CtGenerateLabel (
    IN inst : ^IrInstruction,
)

    CtInsertStringFunc ( "    " )
    CtOutputLabelName ( inst )
    CtInsertStringFunc ( ":;\n" )
END

FN (CtGenerateF) CtGenerateJump (
